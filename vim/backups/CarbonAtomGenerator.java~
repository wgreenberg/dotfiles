import java.util.Random;

public class CarbonAtomGenerator implements Runnable {

  private Random random = new Random();
  int count = 0;
  private ChemicalBondingCreator cbc;
  Thread generatorThread;

  public CarbonAtomGenerator(ChemicalBondingCreator cbc, Thread genThread){
    this.cbc = cbc;
    this.generatorThread = genThread;
  }

  @Override
  public void run(){
    while(true){
      try{
        Thread.sleep((long)(3000.0 * random.nextDouble()));
      } catch(InterruptedException e){
        e.printStackTrace();
      }

      CarbonAtom ca = new CarbonAtom(cbc, count++, this.genThread);
      Thread thread = new Thread(ca);
      thread.start();
    }
  }

}
