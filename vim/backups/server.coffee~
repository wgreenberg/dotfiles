chai = require('chai')
expect = chai.expect
should = chai.should()
nano = require('nano')('http://localhost:5984')

testDB = 'test'
db = null

describe "GameServer", ->
  beforeEach (done) ->
    nano.db.destroy testDB, (err) ->
      nano.db.create testDB, ->
        db = nano.use(testDB)
        done()

  describe 'Database', ->
    it "should be able to insert docs", (done) ->
      db.insert {crazy:true}, 'rabbit', (err, body, header) ->
        should.be.null(err)
        done()
